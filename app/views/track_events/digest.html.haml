.welcome
  .row
    .small-12.large-12.column
      %h1 Get your History
.row
  .large-12.medium-12.column
    = form_for @log, url: {action: "get_digest"} do |f|

      - if @errors
        %div.callout.alert.radius{data: {alert:true}}
          %h5
            %i.fa.fa-exclamation-circle
            Email not sent
          %p=@errors

      .large-12.columns
        = f.label :email, 'Ohio State Email (lowercase name.#@osu.edu please)',
          class: ('is-invalid-label' if @errors)
        = f.email_field :email,
          class: ('is-invalid-input' if @errors)

      = f.submit 'Submit', class: "button"

